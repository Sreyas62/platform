// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @unique @default(cuid()) @db.VarChar(25)
  authId        String?  @unique // SuperTokens Authentication ID
  name          String
  email         String   @unique
  college       College? @relation(fields: [collegeId], references: [id])
  collegeId     String?
  passYear      Int?
  description   String
  district      String?
  dob           DateTime
  house         String?
  pin           Int?
  mentor        Boolean
  mobile        String?  @unique
  pronoun       String?
  street        String?
  skills        Skill[]
  discordActive Boolean  @default(false)
}

model College {
  id   String @id @unique @default(dbgenerated("gen_random_uuid()::TEXT"))
  name String @unique
  location String?
  Type String?
  user User[]
}

model Skill {
  id   String @id @unique @default(dbgenerated("gen_random_uuid()::TEXT"))
  name String @unique
  user User[]
}
